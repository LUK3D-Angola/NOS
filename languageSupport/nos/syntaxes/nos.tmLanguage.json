{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "{Nos}",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#operators"
		}
		,
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#reserved-words"
		},
		{
			"include": "#ctrl-statements"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.nos",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"comments": {
			"patterns": [
				{
					"begin":"\\\\",
					"beginCaptures":{
						"0":{
							"name":"punctuation.definition.comment.tpl"
						}
					},"end":"\\n",
					"name":"comment.line.number-sign.tpl"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.nos",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.nos",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.nos"
}